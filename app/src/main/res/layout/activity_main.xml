<?xml version="1.0" encoding="utf-8"?>

<layout>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#008000"
        android:orientation="vertical"
        tools:context=".MainActivity">
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="55dp"
                  android:layout_marginTop="100dp">
        
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="인생은 주사위"
                  android:textStyle="bold"
                  android:textSize="30sp"
                  android:textColor="@color/black"/>
    
    
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="200dp"
                  android:weightSum="2"
    >
        
        <ImageView android:src="@drawable/dice_1"
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:layout_weight="1"
        />
        
        <ImageView android:src="@drawable/dice_2"
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:layout_weight="1"
        />
    
    
    </LinearLayout>
    
    <Button
            android:id="@+id/diceStartBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_margin="50dp"
            android:text="주사위 고고"/>


</LinearLayout>
</layout>